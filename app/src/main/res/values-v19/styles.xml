<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Light Theme -->

    <style name="AppTheme.Light" parent="Base.AppTheme.Light">
        <item name="android:windowTranslucentNavigation">@bool/translucent_nav</item>
        <item name="android:windowTranslucentStatus">@bool/translucent_status</item>
    </style>

    <!-- Dark Theme -->

    <style name="AppTheme.Dark" parent="Base.AppTheme.Dark">
        <item name="android:windowTranslucentNavigation">@bool/translucent_nav</item>
        <item name="android:windowTranslucentStatus">@bool/translucent_status</item>
    </style>

    <!-- Misc -->

    <style name="AppTheme.Light.Cropper" parent="AppTheme.Dark">
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="AppTheme.Viewer" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="toolbar_shadow">@drawable/toolbar_shadow</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">@bool/translucent_nav_viewer</item>
    </style>

</resources>