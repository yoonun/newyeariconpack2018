<resources>

    <!-- Light Theme -->

    <style name="AppTheme.SplashLight.Parent" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.SplashLight" parent="AppTheme.SplashLight.Parent">
        <item name="android:windowBackground">@drawable/splash_light</item>
        <item name="colorPrimary">@color/splash_light_bg</item>
        <item name="colorPrimaryDark">@color/splash_light_status</item>
        <item name="colorAccent">@android:color/black</item>

        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppTheme.Light" parent="Base.AppTheme.Light" />

    <style name="AppTheme.Light.Translucent" parent="AppTheme.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Dark Theme -->

    <style name="AppTheme.SplashDark.Parent" parent="Theme.AppCompat.NoActionBar" />

    <style name="AppTheme.SplashDark" parent="AppTheme.SplashDark.Parent">
        <item name="android:windowBackground">@drawable/splash_dark</item>
        <item name="colorPrimary">@color/splash_dark_bg</item>
        <item name="colorPrimaryDark">@color/splash_dark_status</item>
        <item name="colorAccent">@android:color/black</item>

        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="AppTheme.Dark" parent="Base.AppTheme.Dark" />

    <style name="AppTheme.Dark.Translucent" parent="AppTheme.Dark">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Misc -->

    <style name="AppTheme.Light.Cropper" parent="AppTheme.Dark" />

    <style name="AppTheme.Viewer" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="toolbar_shadow">@drawable/toolbar_shadow</item>
    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>

        <!--4dp padding around the card-->
        <item name="android:layout_marginLeft">@dimen/card_sides_margin</item>
        <item name="android:layout_marginRight">@dimen/card_sides_margin</item>
        <item name="android:layout_marginTop">@dimen/card_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_vertical_margin</item>

        <item name="android:clickable">true</item>
        <!--<item name="android:foreground">?activatable_card_selector</item>-->
        <item name="cardBackgroundColor">?card_background</item>
        <item name="cardCornerRadius">@dimen/cardview_default_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="AccentButtonLight" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/accent_1_light</item>
        <item name="colorButtonNormal">@color/accent_2_light</item>
    </style>

    <style name="AccentButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/accent_1_dark</item>
        <item name="colorButtonNormal">@color/accent_2_dark</item>
    </style>


    <!-- TODO are these needed? -->
    <declare-styleable name="WindowInsetsLayout_Layout">
        <attr name="layout_windowInsets">
            <flag name="top" value="0x1" />
            <flag name="bottom" value="0x2" />
        </attr>
        <attr name="layout_windowInsetsUseMargin" format="boolean" />
    </declare-styleable>
    <declare-styleable name="WindowInsetsLayout">
        <attr name="windowInsets">
            <flag name="top" value="0x1" />
            <flag name="bottom" value="0x2" />
        </attr>
        <attr name="windowInsetsUseMargin" format="boolean" />
    </declare-styleable>

</resources>